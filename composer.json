{
    "name": "hetbo/zero",
    "description": "done beats perfect and real beats safe",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hetbo\\Zero\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hetbo\\Zero\\Tests\\": "tests/",
            "Hetbo\\Zero\\Database\\Factories\\": "database/factories/"
        }
    },
    "authors": [
        {
            "name": "Hosein Safdel",
            "email": "hetbo98@yahoo.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Hetbo\\Zero\\ZeroServiceProvider"
            ],
            "aliases": {
                "Calculator": "Hetbo\\Zero\\Facades\\Calculator"
            }
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "orchestra/testbench": "*",
        "pestphp/pest": "*",
        "phpunit/phpunit": "*"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "pestphp/pest-plugin-laravel": "^3.2"
    }
}
